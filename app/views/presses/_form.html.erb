<%= form_for @press do |form| %>
  <div class="form-block left">
    <div class="form-block">
      <p>
        <%= form.label :name  %>
        <%= form.text_field :name %>
      </p>
    </div>
    <div class="form-block left">
      <p>
      <%= form.label "Inner Link Name"  %>
      <%= form.cktext_area :linkname, :ckeditor => {
        filebrowserImageBrowseUrl: '/ckeditor/pictures',
        filebrowserImageUploadUrl: '/ckeditor/pictures',
        :height => '100',
        :width => '387',
        :toolbar => "mini"
      } 
       %>
      </p>
    </div>
  </div>
    <div class="form-block right">
    <p>
    <%= form.label "Image" %>
    <%= form.cktext_area :image, :ckeditor => {
      filebrowserImageBrowseUrl: '/ckeditor/pictures',
      filebrowserImageUploadUrl: '/ckeditor/pictures',
      :height => '400',
      :width => '547',
      :toolbar => "mini"
    } 
     %>
    </p>    
  </div>
    <p>
    <%= form.submit "Save" %>
  </p>
<% end %>